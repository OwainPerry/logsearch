{
    "bootstrap" : {
        "mlockall" : true
    },
    "indices" : {
        "memory" : {
            "index_buffer_size" : "50%"
        }
    },
    "index" : {
        "cache" : {
            "field" : {
                "type" : "soft",
                "expire" : "15m"
            }
        },
        "translog" : {
            "flush_threshold_ops" : 64000
        }
    },
    "cluster" : {
        "name" : "<%= ENV['APP_CLUSTER_NAME'] %>"
    },
    <% if ENV['APP_CONFIG_ES_EXTRA'] then %>
        <%= ENV['APP_CONFIG_ES_EXTRA'] %>,
    <% end %>
    <% if ENV['APP_CONFIG_ES_AWS_EC2_GROUP'] or ENV['APP_CONFIG_ES_AWS_ACCESS_KEY'] then %>
        "cloud" : {
            "aws" : {
                <% if ENV['AWS_DEFAULT_REGION'] then %>
                    "region" : "<%= ENV['AWS_DEFAULT_REGION'] %>"
                <% end %>
                <% if ENV['AWS_DEFAULT_REGION'] and ENV['APP_CONFIG_ES_AWS_ACCESS_KEY'] %>,<% end %>
                <% if ENV['APP_CONFIG_ES_AWS_ACCESS_KEY'] then %>
                    "access_key" : "<%= ENV['APP_CONFIG_ES_AWS_ACCESS_KEY'] %>",
                    "secret_key" : "<%= ENV['APP_CONFIG_ES_AWS_SECRET_KEY'] %>"
                <% end %>
            }
        },
        "discovery" : {
            "type" : "ec2",
            "ec2" : {
                "groups" : "<%= ENV['APP_CONFIG_ES_AWS_EC2_GROUP'] %>"
            }
            <% if ENV['APP_CONFIG_ES_MASTER_NODES_MIN'] then %>
                ,
                "zen" : {
                    "minimum_master_nodes" : <%= ENV['APP_CONFIG_ES_MASTER_NODES_MIN'] %>
                }
            <% end %>
        },
    <% end %>
    "path" : {
        "conf" : "<%= ENV['APP_APP_DIR'] %>/srv/elasticsearch/config/",
        "logs" : "<%= ENV['APP_LOG_DIR'] %>/elasticsearch",
        "data" : "<%= ENV['APP_DATA_DIR'] %>/elasticsearch"
    },
    "network" : {
        "host" : "<%= ENV['APP_CONFIG_ES_IPADDRESS'] %>"
    },
    "http" : {
        "port" : "9200",
        "type" : "com.sonian.elasticsearch.http.filter.FilterHttpServerTransportModule"
    },
    "threadpool" : {
        "search" : {
            "type" : "fixed",
            "size" : 32,
            queue_size : 128
        },
        "index" : {
            "type" : "fixed",
            "size" : 64,
            queue_size : 256
        }
    },
    "sonian" : {
        "elasticsearch" : {
            "http" : {
                "filter" : {
                    "http_filter_chain" : [
                        "logging"
                    ],
                    "http_filter" : {
                        "logging" : {
                            "type" : "com.sonian.elasticsearch.http.filter.logging.LoggingFilterHttpServerAdapter",
                            "logger" : "request",
                            "format" : "json",
                            "level" : "INFO",
                            "log_body" : false,
                            "loggers" : {
                                "stats" : {
                                    "path" : [
                                        "/_cluster/health",
                                        "/_cluster/nodes",
                                        "/_cluster/state",
                                        "/_cluster/nodes/{node}/stats"
                                    ],
                                    "method" : [
                                        "GET"
                                    ],
                                    "level" : "TRACE"
                                },
                                "searches" : {
                                    "path" : [
                                        "/_search",
                                        "/_search/scroll",
                                        "/_search/scroll/{scroll_id}",
                                        "/{index}/_search",
                                        "/{index}/{type}/_search",
                                        "/{index}/{type}/{id}/_mlt"
                                    ],
                                    "method" : [
                                        "GET",
                                        "POST"
                                    ],
                                    "log_body": true
                                },
                                "count" : {
                                    path: [
                                        "/_count",
                                        "/{index}/_count",
                                        "/{index}/{type}/_count"
                                    ],
                                    "method" : [
                                        "GET",
                                        "POST"
                                    ],
                                    "log_body" : true
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}

