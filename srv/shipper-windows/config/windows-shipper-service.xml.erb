<service>
  <id>windows-shipper</id>
  <name>windows-shipper <%=ENV['version']%></name>
  <description>Ships logs to LogSearch cluster (over a SSH tunnel)</description>
  <env name="PLINK" value="%BASE%/plink.exe"/>
  <env name="LOGSTASH_JAR" value="%BASE%/logstash.jar"/>
  <env name="LOGSTASH_CONFIG" value="%BASE%/config.conf"/>
  <executable>Start.cmd</executable>
  <startargument>%LOGSTASH_JAR%</startargument>
  <startargument>%LOGSTASH_CONFIG%</startargument>
  <stopexecutable>Stop.cmd</stopexecutable>
  <stopargument>"%LOGSTASH_JAR%"</stopargument>  
  <workingdirectory>%BASE%</workingdirectory>
  <log mode="reset"/>
  <onfailure action="restart" delay="30 sec" />
</service>