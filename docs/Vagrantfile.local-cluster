Vagrant.configure("2") do |config|
  config.vm.provider :aws do |aws, override|
      aws.finalize!

      config.vm.provision :shell, :inline => "echo 'export APP_CONFIG_ES_CLUSTER=\"#{ENV['USER']}-default\"' >> /app/.env"
      config.vm.provision :shell, :inline => "echo 'export APP_CONFIG_EC2_ACCESS=\"#{aws.access_key_id}\"' >> /app/.env"
      config.vm.provision :shell, :inline => "echo 'export APP_CONFIG_EC2_SECRET=\"#{aws.secret_access_key}\"' >> /app/.env"
  end
end
