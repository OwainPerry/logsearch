#!/bin/bash

# args: aws|virtualbox -|destroy

set -e

vagrant up --provider $1

set +e

(
  vagrant ssh -c "
    export AWS_DEFAULT_REGION="$AWS_DEFAULT_REGION" ;
    cd /app/app &&
    rake test:cloudformation_template_syntax[.build/aws/cloudformation/*.template] &&
    rake logstash:test:all_types
  "
)

EXITCODE=$?

set -e

if [ 'destroy' == $2 ]; then
  vagrant destroy
fi

exit $EXITCODE
