<%= ERB.new(File.read(File.expand_path('src/logstash-common-filters.conf.erb'))).result(binding) %>

input {
    file {
        type => "elasticsearch"
        path => [
            "<%= Dir.getwd %>/var/log/elasticsearch/elasticsearch.log"
        ]
    }

    file {
        type => "nginx"
        path => "<%= Dir.getwd %>/var/log/nginx-access.log"
    }
}

output {
    #stdout { debug => true debug_format => "json"}
    elasticsearch_http {
        flush_size => 1
    }
}
